@model WarehouseMVC.Models.Forms.ReceptionCreationForm

@{
    ViewBag.Title = "Create";
}

<h2>Création d'un bon de réception</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="jumbotron">
        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <div class="col-lg-offset-1">
                    <b>Article</b>
                </div>
                <div class="col-lg-offset-1">
                    @Html.DropDownListFor(model => model.ArticleId, new List<SelectListItem>(Model.ListArticle.Select(a => new SelectListItem() { Text = a.Nom, Value = a.ArticleId.ToString() })))
                    @Html.ValidationMessageFor(model => model.ArticleId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-1"><b>Catégorie</b></div>
                <div class="col-lg-offset-1">
                    @Html.DropDownListFor(model => model.CategorieId, new List<SelectListItem>(Model.ListCategorie.Select(c => new SelectListItem() { Text = c.Nom, Value = c.CategorieId.ToString() })))
                    @Html.ValidationMessageFor(model => model.CategorieId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-1"><b>Fournisseur</b></div>
                <div class="col-lg-offset-1">
                    @Html.DropDownListFor(model => model.FournisseurId, new List<SelectListItem>(Model.ListFournisseur.Select(f => new SelectListItem() { Text = f.Nom, Value = f.FournisseurId.ToString() })))
                    @Html.ValidationMessageFor(model => model.FournisseurId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-1">
                    <b>Quantité reçue</b>
                    @Html.EditorFor(model => model.Quantite, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Quantite, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Confirmer la création" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Retour à la liste", "Index")
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}