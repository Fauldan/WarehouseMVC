@model WarehouseMVC_DAL.Models.Reception

@{
    ViewBag.Title = "Delete";
}

<h2>Annulation de la réception</h2>

<div>

    <hr />
    <div class="jumbotron">
        <dl class="dl-horizontal">
            <dt>
                Id Réception
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ReceptionId)
            </dd>

            <dt>
                Id Article
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ArticleId)
            </dd>

            <dt>
                Article
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ArticleNom)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Quantite)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Quantite)
            </dd>

            <dt>
                Fournisseur
            </dt>

            <dd>
                @Html.DisplayFor(model => model.FournisseurNom)
            </dd>

            <dt>
                Id Utilisateur
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UtilisateurId)
            </dd>

            <dt>
                Utilisateur
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UtilisateurNom)
            </dd>
        </dl>


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Annuler la réception" class="btn btn-default" />
            </div>
            <br />
            @Html.ActionLink("Annuler", "Index")
        }
    </div>
