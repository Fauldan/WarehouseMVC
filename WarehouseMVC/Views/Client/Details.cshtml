@model WarehouseMVC_DAL.Models.Client

@{
    ViewBag.Title = "Details";
}

<h2>Détail du client</h2>

<p>
    @Html.ActionLink("Créer un client", "Create")
</p>
<div class="jumbotron">
    <h3>@Html.DisplayFor(model => model.Nom)</h3>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nom
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Nom)
        </dd>
        <dt>
            Prénom
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Prenom)
        </dd>
        <dt>
            Nom de la société
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NomSociete)
        </dd>
        <dt>
            Rue et numéro
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Numero) @Html.DisplayFor(model => model.Rue)
        </dd>
        <dt>
            Code Postal
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CodePostal)
        </dd>
        <dt>
            Ville
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Ville)
        </dd>
        <dt>
            Pays
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Pays)
        </dd>
        <dt>
            Téléphone
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NumTel)
        </dd>
        <dt>
            Email
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt>
            Numéro Tva
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NumTva)
        </dd>
    </dl>
    @Html.ActionLink("Supprimer", "Delete", new { id = Model.ClientId })
</div>
<p>
    
    @Html.ActionLink("Retour à la liste", "Index")
</p>

