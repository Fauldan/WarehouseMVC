@using WarehouseMVC.Infrastructure

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mon application ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Fauldan Warehouse", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Accueil", "Index", "Home")</li>
                    <li>@Html.ActionLink("Articles", "Index", "Article")</li>
                    <li>@Html.ActionLink("Fournisseurs", "Index", "Fournisseur") </li>
                    <li>@Html.ActionLink("Clients", "Index", "Client") </li>
                    <li>@Html.ActionLink("Catégories", "Index", "Categorie")</li>
                    <li>@Html.ActionLink("Secret", "Secret", "Article")</li>
                    @if (SessionManager.Utilisateur is null)
                    {
                        <li>@Html.ActionLink("Créer un compte", "Register", "Auth")</li>
                        <li>@Html.ActionLink("Connexion", "Login", "Auth")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink($"Déconnexion ({SessionManager.Utilisateur.Login})", "Logout", "Auth")</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Fauldan Technologies</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
